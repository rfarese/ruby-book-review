<% if admin? %>

<h1>All System Users</h1>
  <% @users.each do |user| %>

    <p><%= user.first_name %> <%= user.last_name %><p>

    <ul id="<%= dom_id(user) %>">
      <li>Email: <%= user.email %></li>
      <li>Role: <%= user.role %></li>
      <li><%= link_to "Delete User", user_path(user.id), method: :delete %></li>
    </ul>
  <% end %>
<% end %>
