<h2>Sign up</h2>
<div class="row">
  <div class="medium-4 columns">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-inputs">
        <%= f.input :first_name, required: true, autofocus: true %>
        <%= f.input :last_name, required: true %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, required: true %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="medium-1 columns">
  </div>

  <div class="medium-7 columns new-book-cta">
    <ul>
      <li><h3>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Ruby Book Reviews</h3></li>
      <li><%= image_tag('checked.svg', size: "50") %> &nbsp;&nbsp;&nbsp;Add books about the Ruby programming language</li>
      <li><%= image_tag('checked.svg', size: "50") %> &nbsp;&nbsp;&nbsp;Find the right books about Ruby to help advance your career</li>
      <li><%= image_tag('checked.svg', size: "50") %> &nbsp;&nbsp;&nbsp;Share your knowledge with others and help them in their coding journey</li>
    </ul>
  </div>
</div>
