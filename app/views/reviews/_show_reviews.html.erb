<h2>Book Reviews</h2>

<p id="voting-message"></p>

<section>
  <% @reviews.each do |review| %>
    <ul class="menu" id="<%= dom_id(review) %>">

      <div class="row review-details">
        <div class="small-2 medium-1 large-1 columns">
          <li><%= link_to "Edit", edit_book_review_path(@book, review) %></li>
        </div>

        <div class="small-10 medium-4 large-2 columns">
          <li><%= review.title %></li>
        </div>

        <div class="small-12 medium-12 large-4 columns review-descriptions">
          <li><%= review.description %></li>
        </div>

        <!-- add voting links here -->
        <div class="small-12 medium-12 large-5 columns">
          <% if !user_signed_in? %>

            <div class="row">
              <div class="small-4 medium-3 large-4 columns">
                <li><%= link_to "Up Vote", api_v1_votes_path(review_id: review.id, up_vote: true, down_vote: false), method: :post, class: "up-vote-post-ajax button vote-button", remote: true %></li>
              </div>

              <div class="small-4 medium-3 large-4 columns">
                <li><%= link_to "Down Vote", api_v1_votes_path(review_id: review.id, up_vote: false, down_vote: true), method: :post, class: "down-vote-post-ajax button vote-button", remote: true %></li>
              </div>

              <div class="small-4 medium-6 large-4 columns delete-button"></div>
            </div>

          <% elsif Vote.exists?(user_id: current_user.id, review_id: review.id) %>

            <div class="row">
              <div class="small-4 medium-3 large-4 columns">
                <li><%= link_to "Up Vote", api_v1_vote_path(review_id: review.id, up_vote: true, down_vote: false), method: :patch, class: "up-vote-patch-ajax button vote-button", remote: true %></li>
              </div>

              <div class="small-4 medium-3 large-4 columns">
                <li><%= link_to "Down Vote", api_v1_vote_path(review_id: review.id, up_vote: false, down_vote: true), method: :patch, class: "down-vote-patch-ajax button vote-button", remote: true %></li>
              </div>

              <div class="small-4 medium-6 large-4 columns delete-button">
                <li><%= link_to "Delete Vote", api_v1_vote_path(review_id: review.id), method: :delete, class: "delete-vote-ajax button vote-button", remote: true %></li>
              </div>
            </div>

          <% else %>

            <div class="row">
              <div class="small-4 medium-3 large-4 columns">
                <li><%= link_to "Up Vote", api_v1_votes_path(review_id: review.id, up_vote: true, down_vote: false), method: :post, class: "up-vote-post-ajax button vote-button", remote: true %></li>
              </div>

              <div class="small-4 medium-3 large-4 columns">
                <li><%= link_to "Down Vote", api_v1_votes_path(review_id: review.id, up_vote: false, down_vote: true), method: :post, class: "down-vote-post-ajax button vote-button", remote: true %></li>
              </div>

              <div class="small-4 medium-6 large-4 columns delete-button"></div>
            </div>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</section>


<%= paginate @reviews %>
