<h1>Edit Review</h1>

<%= link_to "Delete Review", book_review_path(@book, @review), method: :delete %>

<%= simple_form_for [@book, @review] do |f| %>

  <div class="form-inputs">
    <%= f.input :title, required: true, autofocus: true %>
    <%= f.input :description, as: :text, required: true, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>

<%= link_to "Back", book_path(@book) %>
